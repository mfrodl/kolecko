= form_with model: hint, class: 'star-rating-form', data: { 'hint': hint.id } do |form|
  = form.hidden_field :rating, value: 0, class: 'rating'
  .star-rating
    - (1..5).each do |i|
      - if hint.rating?
        .frozen
          %i.far.fa-star
      - else
        .star{ data: { rating: "#{i}" } }
          %i.far.fa-star
  - unless hint.rating?
    = submit_tag 'Odeslat hodnocen√≠'
